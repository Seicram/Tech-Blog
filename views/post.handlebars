<div class="post">
  <h2>{{title}}</h2>
  <p class="post-meta">Posted by {{author}} | {{formatDate createdAt}}</p>
  <p>{{content}}</p>

  <h3>Comments</h3>
  <div class="comments">
    {{#each comments}}
    <div class="comment">
      <p>{{content}}</p>
      <p class="comment-meta">Posted by {{author}} | {{formatDate createdAt}}</p>
    </div>
    {{/each}}
  </div>

  {{#if user}}
  <div class="comment-form">
    <h3>Add a Comment</h3>
    <form action="/comment/{{_id}}" method="POST">
      <textarea name="content" placeholder="Enter your comment" required></textarea>
      <button type="submit">Submit</button>
    </form>
  </div>
  {{else}}
  <p><a href="/login">Login</a> to leave a comment.</p>
  {{/if}}
</div>
